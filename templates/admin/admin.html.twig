{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}     
    
    <p>Signalements</p>

    {% for newSignal in signalement %}

            <a href="/search/{{ newSignal.sigIdSpotId.id }}">Voir les informations</a>
            <p>Il n'y a rien à ce spot : {{ newSignal.sigVide }}</p>
            <p>Toxicité incorrecte : {{ newSignal.sigToxique }}</p>
            <p>Description incorrecte : {{ newSignal.sigDesc }}</p>
            <p>Qualité du spot incorrecte : {{ newSignal.sigAccessibilite }}</p>

            

            <form action="" method="POST">
                <input type="hidden" name="idsignal" value="{{ newSignal.id }}">
                <input type="hidden" name="idvalue" value="{{ newSignal.sigIdSpotId.id }}">
                <input type="submit" name="delete" value="Supprimer le spot">
            </form>

    {% endfor %}


{% endblock %}