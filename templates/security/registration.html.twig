{% extends 'base.html.twig' %}

{% block body %}

    <h1>Inscription</h1>

    {{ form_start(form) }}

        {{ form_row(form.username, {'label': 'Pseudo'}) }}
        {{ form_row(form.USE_nom, {'label': 'Nom complet'}) }}
        {{ form_row(form.USE_email, {'label': 'Mail'}) }}
        {{ form_row(form.password, {'label': 'Mot de passe'}) }}
        {{ form_row(form.confirm_password, {'label': 'Confirmer votre mot de passe'}) }}

        <button type="submit">S'inscrire</button>

    {{ form_end(form) }}

{% endblock %}