{% extends 'base.html.twig' %}

{% block title %}Hello {% endblock %}

{% block body %}

<section class="p-50-50-0 no-padding-mobile">

    <div class="row d-flex-mobile flex-column-reverse-mobile">
        <div class="col m3 d-flex flex-column ai-center jc-space-between h-100pct s12 h-100pct-mobile">
            <div class="d-flex flex-column">
                <h3 class="raleway fw-700 color-1 separator fs-24 no-margin text-center">AJOUTER UN SPOT</h3>
                     {{ form_start(formSpot) }}
                        {{ form_row(formSpot.SPO_description) }}
                        {{ form_row(formSpot.SPO_accessibilite) }}
                        {{ form_row(formSpot.SPO_longitude) }}
                        {{ form_row(formSpot.SPO_id_champi) }}
                        {{ form_row(formSpot.SPO_photo) }}
                        {{ form_row(formSpot.SPO_latitude) }}
                        
                        <input type="submit" value="Envoyer">
                    {{ form_end(formSpot) }}
                    <div class="d-flex flex-column d-none d-block-mobile">
                        <button id="snap" class="browser-default">Prendre la photo</button>
                        <video id="video" width="250" height="180" autoplay></video>
                        <canvas id="canvas" width="250" height="180" class="d-none"></canvas>
                    </div>
                    <a href="{{ path('ajout_champignon') }}">Ajouter un champignon</a>
                    
            </div>
        </div>

        <div class="col m9 s12 m-t-25-mobile">

            <div class="map w-100pct map-mobile" id="mapid">
            {# {%   for spot in spots   %}
                <input type="hidden" data-lat="{{ spot.SPOLatitude }}" 
                data-long="{{ spot.SPOLongitude }}" data-img="{{  spot.SPOPhoto  }}" 
                data-id="{{   spot.id   }}" data-description="{{  spot.SPODescription  }}" 
                name="lnglat" id="lnglat" class="lnglat" />
                
                <!-- Modal Structure -->
                <div id="info-modal-spot{{ spot.id }}" class="modal">
                    <div class="modal-content">
                        <h4>Modale de l'id {{ spot.id }}</h4>
                        <p>{{  spot.SPODescription  }}</p>
                        <p>Avec le champi : {{ spot.SPOIdChampi.CHAEspece }}</p>
                    </div>

                    <div class="modal-footer">
                        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
                    </div>
                </div>
                <!-- End Modal -->
            {%   endfor   %} #}
                
        
            </div>
            <p id="infoposition"></p>

            <input type="hidden" name="lat" id="lat"/> 
            <input type="hidden" name="lng" id="lng"/>



            
        </div>
    </div>
</section>

